@inject IJSRuntime JSRuntime

<!-- This "class" covers the top menu, because it is always seen, it os applied as a component in MainLayout.razor -->

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

<div class="sidebar" style="background: @PageMenuBG">
    <input id="hambox" type="checkbox">
    <label class="toggle" for="hambox">
        <div id="bar1" class="bars"></div>
        <div id="bar2" class="bars"></div>
        <div id="bar3" class="bars"></div>
    </label>
    <div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
            <a class="brand" href="notes">Echo</a>
    </div>
</div>

<div class="nav-scrollable">
        <div class="px-3 dropdown">
            <NavLink class="nav-link" href="savefile">
                <h4>Save</h4>
                <i class="fa-regular fa-file"></i>
            </NavLink>
        </div>

         

        <div class="px-3 dropdown">
            <nav class="nav-link">
                <h4>Tools</h4>
                <i class="fa-solid fa-screwdriver-wrench"></i>
            </nav>
            <ul class="dropdown-content">
                <li @onclick="() => CountTheWords()">@WordCount words</li>
                <li @onclick="() => CountTheChars()">@CharCount characters</li>
                </ul>
        </div>
            <div class="px-3 dropdown">
            <nav class="nav-link">
                <h4>Users</h4>
                <i class="fa-regular fa-user"></i>
            </nav>
            <ul class="dropdown-content">
                <li>You <span class="user-colour" style="background: @colour"></span></li>
            </ul>
        </div>
        <div class="px-3 dropdown">
                <NavLink class="nav-link settings" href="settings">
                <i class="fa-solid fa-gear"></i>
            </NavLink> 
        </div>
</div>
</div>

<script>

    /* Function for using Hamburger menu (open/close) when user clicks the icon */
    document.getElementById('hambox').addEventListener('change', function () {
        if (this.checked) {
            document.querySelector('.sidebar').classList.add('hambox-checked');
        } else {
            document.querySelector('.sidebar').classList.remove('hambox-checked');
        }
    });
</script>

